<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="8dp"
        app:cardPreventCornerOverlap="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <View
                android:id="@+id/completed_progress"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/green_7ed" />

            <View
                android:id="@+id/empty_progress"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/white_d6d" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/section_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="2"
                android:paddingEnd="13dp"
                android:paddingStart="13dp"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold"
                tools:text="dasdhaikshdo"
                tools:textColor="@color/white" />

            <ImageView
                android:id="@+id/section_info"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:tint="@color/white"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_info_outline" />

            <TextView
                android:id="@+id/section_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                android:paddingEnd="13dp"
                android:paddingStart="13dp"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                android:textStyle="bold"
                tools:text="0/12" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>