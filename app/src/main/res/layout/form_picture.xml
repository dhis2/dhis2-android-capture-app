<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="label"
            type="java.lang.String" />

        <variable
            name="description"
            type="java.lang.String" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_margin="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/formLabel"
            android:layout_width="wrap_content"
            android:textSize="@dimen/textSize_12"
            android:layout_height="wrap_content"
            android:paddingStart="4dp"
            android:text="@{label}"
            tools:text="Form Name" />

        <ImageView
            android:layout_margin="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/descriptionLabel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="@{(label.length()>16||description!=null)?View.VISIBLE : View.GONE}"
            app:srcCompat="@drawable/ic_info_outline"
            app:tint="?colorPrimary" />


        <ImageView
            app:layout_constraintTop_toBottomOf="@id/formLabel"
            android:background="@color/greyish"
            app:srcCompat="@drawable/ic_camera"
            android:id="@+id/image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:scaleType="centerInside"
            android:minHeight="100dp"
            android:maxHeight="200dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            app:layout_constraintTop_toBottomOf="@id/image"
            android:id="@+id/errorMessage"
            android:layout_width="match_parent"
            android:textSize="@dimen/textSize_12"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:visibility="gone"
            tools:textAppearance="@style/error_appearance"
            tools:text="This is a error warning"
            tools:visibility="visible"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>