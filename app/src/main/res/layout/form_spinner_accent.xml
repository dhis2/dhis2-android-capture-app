<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="label"
            type="java.lang.String" />

        <variable
            name="description"
            type="java.lang.String" />

        <variable
            name="optionSet"
            type="java.lang.String" />

        <variable
            name="isBgTransparent"
            type="java.lang.Boolean" />

        <variable
            name="initialValue"
            type="java.lang.String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        tools:background="?attr/colorPrimary">

        <ImageView
            android:id="@+id/renderImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/sierra_leone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/label"
            style="@style/FieldLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{label}"
            android:textColor="?colorAccent"
            app:layout_constraintTop_toBottomOf="@id/renderImage"
            tools:text="@string/lorem" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/renderImage"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/label">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/renderImage"
                android:layout_weight="1"
                android:hint="@string/choose_option"
                android:textColorHint="@drawable/edit_text_hint_accent"
                android:theme="@style/loginInputTextAccent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableTint="?colorAccent"
                    android:imeOptions="actionNext"
                    android:maxLines="4"
                    android:textAlignment="textStart"
                    android:textColor="?colorAccent"
                    android:textSize="15sp"
                    app:drawableEndCompat="@drawable/ic_arrow_drop_down" />

            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_close"
                app:tint="?colorAccent" />

            <ImageView
                android:id="@+id/descriptionLabel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="@{(label.length()>16 || description!=null)?View.VISIBLE : View.GONE}"
                app:srcCompat="@drawable/ic_info_outline"
                app:tint="?colorAccent" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>