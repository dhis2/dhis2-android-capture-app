<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="java.lang.String" />

        <variable
            name="presenter"
            type="org.dhis2.usescases.teiDashboard.teiProgramList.TeiProgramListContract.Presenter" />

        <variable
            name="enrollment"
            type="org.hisp.dhis.android.core.enrollment.EnrollmentModel" />

        <variable
            name="program"
            type="org.hisp.dhis.android.core.program.ProgramModel" />
    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:contentDescription='@{program.uid}'
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:padding="8dp"
                android:alpha="0.5"
                app:srcCompat="@drawable/photo_temp" />


            <TextView
                android:id="@+id/program_name"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:text='@{program.displayShortName}'
                android:textColor="@color/black_de0"
                android:textSize="16sp"
                tools:text="ANC PROGRAM"/>


            <Button
                android:id="@+id/action_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginEnd="16dp"
                android:layout_height="28dp"
                android:background="?attr/selector_button_round_7"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:text="@string/enroll"
                android:onClick="@{()->presenter.onEnrollClick(program)}"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_afa"/>
    </LinearLayout>
</layout>
