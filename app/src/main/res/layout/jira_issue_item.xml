<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="issue"
            type="org.dhis2.utils.jira.JiraIssue" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingTop="10dp"
        android:paddingEnd="5dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/key"
            style="@style/TextSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{issue.key}"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="ANDROAPP-XXXX" />

        <TextView
            android:id="@+id/summary"
            style="@style/TextPrimary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{issue.fields.summary}"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@id/arrow"
            app:layout_constraintTop_toBottomOf="@id/key"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="@string/lorem" />

        <TextView
            android:id="@+id/status"
            style="@style/TextSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="@{issue.fields.status.name}"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@id/arrow"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Done" />

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_keyboard_arrow_right_black" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>