<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TimePickerThemeRed" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/colorGreyDefault</item>
        <item name="colorAccent">@color/colorGreyDefault</item>
        <item name="android:colorAccent">@color/colorGreyDefault</item>
    </style>

    <style name="DatePickerThemeRed" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorGreyDefault</item>
        <item name="android:colorAccent">@color/colorGreyDefault</item>
    </style>

    <style name="DatePickerThemeGreen" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorGreyDefault</item>
        <item name="android:colorAccent">@color/colorGreyDefault</item>
    </style>

    <style name="DatePickerThemeOrange" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorGreyDefault</item>
        <item name="android:colorAccent">@color/colorGreyDefault</item>
    </style>

    <style name="TimePickerThemeGreen" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/colorGreyDefault</item>
        <item name="colorAccent">@color/colorGreyDefault</item>
        <item name="android:colorAccent">@color/colorGreyDefault</item>
    </style>

    <style name="TimePickerThemeOrange" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/colorGreyDefault</item>
        <item name="colorAccent">@color/colorGreyDefault</item>
        <item name="android:colorAccent">@color/colorGreyDefault</item>
    </style>

    <style name="DatePickerTheme" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorGreyDefault</item>
        <item name="android:colorAccent">@color/colorGreyDefault</item>
    </style>

    <style name="TimePickerTheme" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/colorGreyDefault</item>
        <item name="colorAccent">@color/colorGreyDefault</item>
        <item name="android:colorAccent">@color/colorGreyDefault</item>
    </style>

    <style name="ActionIcon" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_12</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ActionIconSmallPadding" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">6dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ActionIconNoPadding" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ActionIconUnwrap">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="PopupMenuMarginStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:dropDownHorizontalOffset">-4dp</item>
        <item name="android:dropDownVerticalOffset">4dp</item>
    </style>

    <style name="TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="BreakTheGlassBottomSheetDialogTheme" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="colorControlActivated">?colorPrimary</item>
        <item name="colorControlHighlight">?colorPrimary</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="filterPeriodRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">11sp</item>
        <item name="buttonTint">@color/white</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
    </style>

    <style name="filterCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="buttonTint">@color/white</item>
    </style>

    <style name="inputText">
        <item name="android:textColorHint">@color/textSecondary</item>
        <item name="colorControlNormal">@color/textPrimary</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="colorControlActivated">?colorPrimary</item>
    </style>

    <style name="primaryOUCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="buttonTint">?colorPrimary</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/error_color</item>
    </style>

    <style name="warning_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/warning_color</item>
    </style>

</resources>