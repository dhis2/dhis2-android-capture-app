        <item name="selector_button_round_7">@drawable/selector_button_round_7</item>
        <item name="selector_button_round_2">@drawable/selector_button_round_2</item>
        <item name="image_selector_bg">@drawable/image_selector_bg</item>
        <item name="period_button">@drawable/period_button</item>
        <item name="period_time_button">@drawable/period_time_button</item>
        <item name="toast_bg">@drawable/toast_bg</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="textInputStyle">@style/Widget.Design.TextInputLayout</item>
        <item name="navigationViewStyle">@style/Widget.Design.NavigationView</item>
        <item name="chipGroupStyle">@style/Widget.MaterialComponents.ChipGroup</item>
