    <style name="ThemeOverlay.App.Correction.Toolbar" parent="">
        <item name="colorPrimary">@color/correction_color</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="correction" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/correction_color</item>
        <item name="colorPrimaryDark">@color/correction_dark_color</item>
