<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->


    <style name="discard" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/discard_color</item>
        <item name="colorPrimaryDark">@color/discard_dark_color</item>
        <item name="colorPrimaryLight">@color/discard_light_color</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!--        <item name="textAllCaps">true</item>-->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorAccentAlpha">@color/colorAccentAlpha</item>
        <item name="primaryBgTextColor">@color/primaryBgTextColor</item>
        <item name="primaryLightBgTextColor">@color/primaryLightBgTextColor</item>
        <item name="primaryDarkBgTextColor">@color/primaryDarkBgTextColor</item>
        <item name="whiteBgTextColor">@color/discard_light_color</item>
        <item name="android:datePickerDialogTheme">@style/DatePickerTheme</item>
        <item name="android:timePickerDialogTheme">@style/TimePickerTheme</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="button_selector">@drawable/button_selector</item>
        <item name="selector_button_round_20">@drawable/selector_button_round_20</item>
        <item name="selector_button_round_7">@drawable/selector_button_round_7</item>
        <item name="selector_button_round_2">@drawable/selector_button_round_2</item>
        <item name="image_selector_bg">@drawable/image_selector_bg</item>
        <item name="period_button">@drawable/period_button</item>
        <item name="period_time_button">@drawable/period_time_button</item>
        <item name="toast_bg">@drawable/toast_bg</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="textInputStyle">@style/Widget.Design.TextInputLayout</item>
        <item name="navigationViewStyle">@style/Widget.Design.NavigationView</item>
        <item name="chipGroupStyle">@style/Widget.MaterialComponents.ChipGroup</item>
        <item name="chipStyle">@style/Widget.MaterialComponents.Chip.Action</item>
    </style>

    <style name="correction" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/correction_color</item>
        <item name="colorPrimaryDark">@color/correction_dark_color</item>
        <item name="colorPrimaryLight">@color/correction_light_color</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorAccentAlpha">@color/colorAccentAlpha</item>
        <item name="primaryBgTextColor">@color/primaryBgTextColor</item>
        <item name="primaryLightBgTextColor">@color/primaryLightBgTextColor</item>
        <item name="primaryDarkBgTextColor">@color/primaryDarkBgTextColor</item>
        <item name="whiteBgTextColor">@color/whiteBgTextColor</item>
        <item name="android:datePickerDialogTheme">@style/DatePickerTheme</item>
        <item name="android:timePickerDialogTheme">@style/TimePickerTheme</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="button_selector">@drawable/button_selector</item>
        <item name="selector_button_round_20">@drawable/selector_button_round_20</item>
        <item name="selector_button_round_7">@drawable/selector_button_round_7</item>
        <item name="selector_button_round_2">@drawable/selector_button_round_2</item>
        <item name="image_selector_bg">@drawable/image_selector_bg</item>
        <item name="period_button">@drawable/period_button</item>
        <item name="period_time_button">@drawable/period_time_button</item>
        <item name="toast_bg">@drawable/toast_bg</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="textInputStyle">@style/Widget.Design.TextInputLayout</item>
        <item name="navigationViewStyle">@style/Widget.Design.NavigationView</item>
        <item name="chipGroupStyle">@style/Widget.MaterialComponents.ChipGroup</item>
        <item name="chipStyle">@style/Widget.MaterialComponents.Chip.Action</item>

    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly"
        parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@android:color/transparent</item>
        <item name="android:minWidth">@dimen/icon_min_size</item>
        <item name="android:minHeight">@dimen/icon_min_size</item>
    </style>

    <style name="Theme.BarcodeCapture" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
